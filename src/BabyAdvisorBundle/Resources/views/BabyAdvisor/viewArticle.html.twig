{% extends "::base.html.twig" %}

{% block title %}BabyAdvisor - Article{% endblock %}

{% block stylesheets %}
		
{% endblock %}
	
{% block body %}
    <div>
        <p>{{article.titre}} - {{article.adresse ~ ' ' ~ article.CP ~ ' ' ~ article.ville}}</p>
        <p>{{article.description}}</p>
        <p>{% for h in article.Horaires %}{{h.jour}} : {{h.HeureDeb}} - {{h.HeureFin}}<br>{% endfor %}</p>

        <p>{% for c in article.categories %}{{c.libelle}} - {% endfor %}{% for t in article.TranchesAge %}{{t.libelle}} - {% endfor %} créé le : {{article.DateCrea|date("m/d/Y")}}{% if not(article.DateCrea == article.DateMaJ) %} - modifié le : {{article.DateMaJ|date("m/d/Y")}}{% endif %} - Par : {% for u in article.User %}{{u.id}}{% endfor %} </p>
        <p>{% for a in article.Activites %}{{a.libelle}} - {{a.tarif}}{% endfor %}</p>
    </div>
    <ul>
        {% for n in article.Notes %}
            <li>Propreté : {{n.MoyPropre}}</li>
            <li>Accéssibilité : {{n.MoyAcce}}</li>
            <li>Encadrement : {{n.MoyEncad}}</li>
            <li>Equipement : {{n.MoyEquip}}</li>
            <li>Ambiance : {{n.MoyAmbiance}}</li>
        {% endfor %}
    </ul>
    <div>
        {% for c in article.commentaires %}{{c.Texte}}<br>{{c.user}} - {{c.DateCom|date("m/d/Y")}}{% endfor %}
    </div>
{% endblock %}