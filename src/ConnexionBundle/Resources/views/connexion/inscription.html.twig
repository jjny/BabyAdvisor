{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}



    <div class="form-group container home col-md-8 col-md-offset-2">

     <div>
            {% for message in app.session.flashbag.get('info') %}
                <p class="alert alert-danger" role="alert">{{ message }}</p>
            {% endfor %}
        </div>


        <form action="{{ path('inscription') }}" method="post" enctype="multipart/form-data">
       {{ form_label(form.nom) }}
        {{ form_widget(form.nom) }}

        {{ form_label(form.prenom) }}
        {{ form_widget(form.prenom) }}

        {{ form_label(form.pseudo) }}
        {{ form_widget(form.pseudo) }}

        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}

        {{ form_label(form.cp) }}
        {{ form_widget(form.cp) }}    

        {{ form_label(form.motDePasse) }}
        {{ form_widget(form.motDePasse) }}

         {{ form_label(form.motDePasseConfirmation) }}
        {{ form_widget(form.motDePasseConfirmation) }}

        {{ form_label(form.nombreEnfant) }}
        {{ form_widget(form.nombreEnfant) }}   

        <div id="inscriptio_anniv" >
            

        </div>

        
        {{ form_label(form.centreInterets) }}
        {{ form_widget(form.centreInterets) }}

        {{ form_widget(form._token) }}



        {{ form_widget(form.Valider) }}

        </form>


            

    </div>


{% endblock %}


{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function(){
            

            $("input[name='inscription[nombreEnfant]']").change(function(){
                var test =$('input[name="inscription[nombreEnfant]"]:checked').val();
               //alert(test);

                $( "#inscriptio_anniv" ).empty();

                if(test> 0){
                    $('{{ form_label(form.trancheAge) }}{{ form_widget(form.trancheAge) }}  ').appendTo("#inscriptio_anniv"); 
                }

            });


           
        });





    </script>
{% endblock %}

